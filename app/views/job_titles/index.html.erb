
<div class="contenedor-paper">
    <div class="Container paper p-5 ">
        <h1>Cargos en Revistas</h1>
        <div class="row justify-content-around align-items-center">
          <table class="col-6 h6">
            <thead>
              <tr class="border-bottom border-dark">
                <th>Name</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @job_titles.each do |job_title| %>
                <tr class="border-bottom border-dark">
                  <td><%= job_title.name %></td>
                  <td class="container contenedor-cartelTable">
                    <div class="container btn cartelTable p-2">
                      <%= link_to 'Ver', job_title, class:"text-decoration-none text-white" %>
                    </div>
                  </td>
                  <td class="container contenedor-cartelTable">
                    <div class="container btn cartelTable p-2">
                      <%= link_to 'Editar',  edit_job_title_path(job_title), class:"text-decoration-none text-white" %>
                    </div>
                  </td>
                  <td class="container contenedor-cartelTable">
                    <div class="container btn cartelTable p-2">
                      <%= link_to 'Eliminar',  job_title , method: :delete, data: { confirm: 'Estas Seguro?' }, class:"text-decoration-none text-white" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <br>

        <div class="container contenedor-cartel2 ">
          <div class="container btn cartel2 p-4 ">
            <%= link_to 'Nuevo Cargo', new_job_title_path, class:"text-decoration-none text-white" %>
          </div>
        </div>
    </div>
</div>