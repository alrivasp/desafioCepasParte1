<div class="contenedor-paper">
    <div class="Container paper p-5 ">
        <h1>Vinos</h1>
        <div class="row justify-content-around align-items-center">
          <table class="col-6 h6">
            <thead>
              <tr class="border-bottom border-dark">
                <th>Nombre</th>
                <th>Cepas</th>
                <th>Nota</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @wines.each do |wine| %>
                <tr class="border-bottom border-dark">
                  <td><%= wine.name %></td>
                  <td>
                    <ul>
                      <% wine.strains.order(:name).each do |s| %>
                        <li><%= "#{s.name} (#{wine.getPercentageByStrainId(s.id)}%)" %></li>
                      <% end %>
                    </ul>
                  </td>
                  <td><%= wine.score %></td>
                  <td class="container contenedor-cartelTable">
                    <div class="container btn cartelTable p-2">
                      <%= link_to 'Ver', wine, class:"text-decoration-none text-white" %>
                    </div>
                  </td>
                  <td class="container contenedor-cartelTable">
                    <div class="container btn cartelTable p-2">
                      <%= link_to 'Editar',  edit_wine_path(wine), class:"text-decoration-none text-white" %>
                    </div>
                  </td>
                  <td class="container contenedor-cartelTable">
                    <div class="container btn cartelTable p-2">
                      <%= link_to 'Eliminar',  wine , method: :delete, data: { confirm: 'Estas Seguro?' }, class:"text-decoration-none text-white" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        
        <br>

        <div class="container contenedor-cartel2 ">
          <div class="container btn cartel2 p-4 ">
            <%= link_to 'Nuevo Vino', new_wine_path, class:"text-decoration-none text-white" %>
          </div>
        </div>
    </div>
</div>