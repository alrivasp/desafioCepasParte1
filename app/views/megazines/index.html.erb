
<div class="contenedor-paper">
    <div class="Container paper p-5 ">
        <h1>Revistas</h1>
        <div class="row justify-content-around align-items-center">
          <table class="col-6 h6">
            <thead>
              <tr class="border-bottom border-dark">
                <th>Nombre</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @megazines.each do |megazine| %>
                <tr class="border-bottom border-dark">
                  <td><%= megazine.name %></td>
                  <td class="container contenedor-cartelTable">
                    <div class="container btn cartelTable p-2">
                      <%= link_to 'Ver', megazine, class:"text-decoration-none text-white" %>
                    </div>
                  </td>
                  <td class="container contenedor-cartelTable">
                    <div class="container btn cartelTable p-2">
                      <%= link_to 'Editar', edit_megazine_path(megazine), class:"text-decoration-none text-white" %>
                    </div>
                  </td>
                  <td class="container contenedor-cartelTable">
                    <div class="container btn cartelTable p-2">
                      <%= link_to 'Eliminar',  megazine , method: :delete, data: { confirm: 'Estas Seguro?' }, class:"text-decoration-none text-white" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        
        <br>

        <div class="container contenedor-cartel2 ">
          <div class="container btn cartel2 p-4 ">
            <%= link_to 'Nuevo Vino', new_megazine_path, class:"text-decoration-none text-white" %>
          </div>
        </div>
    </div>
</div>