
<div class="contenedor-paper">
    <div class="Container paper p-5 ">
        <h1>Enologos</h1>
        <div class="row justify-content-around align-items-center">
          <table class="col-6 h6">
            <thead>
              <tr class="border-bottom border-dark">
                <th>Name</th>
                <th>Age</th>
                <th>Nationality</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @oenologists.each do |oenologist| %>
                <tr class="border-bottom border-dark">
                  <td><%= oenologist.name %></td>
                  <td><%= oenologist.age %></td>
                  <td><%= oenologist.nationality %></td>
                  <td class="container contenedor-cartelTable">
                    <div class="container btn cartelTable p-2">
                      <%= link_to 'Ver', oenologist, class:"text-decoration-none text-white" %>
                    </div>
                  </td>
                  <td class="container contenedor-cartelTable">
                    <div class="container btn cartelTable p-2">
                      <%= link_to 'Editar',  edit_oenologist_path(oenologist), class:"text-decoration-none text-white" %>
                    </div>
                  </td>
                  <td class="container contenedor-cartelTable">
                    <div class="container btn cartelTable p-2">
                      <%= link_to 'Eliminar',  oenologist , method: :delete, data: { confirm: 'Estas Seguro?' }, class:"text-decoration-none text-white" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        
        <br>

        <div class="container contenedor-cartel2 ">
          <div class="container btn cartel2 p-4 ">
            <%= link_to 'Nuevo Enologo', new_oenologist_path, class:"text-decoration-none text-white" %>
          </div>
        </div>
    </div>
</div>